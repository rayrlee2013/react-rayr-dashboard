{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            1,
            4
        ],
        "no-unused-vars": 1,
        "no-empty": 1,
        "no-func-assign": 1,
        "no-invalid-regexp": 1,
        "no-irregular-whitespace": 1,
        "no-unreachable": 1,
        "no-alert": 1,
        "semi": [
            1,
            "always"
        ],
        "semi-spacing": [
            1,
            {
                "before": false
            }
        ],
        "react/display-name": [
            0
        ]
    },
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "extends": [
        "plugin:react/recommended"
    ]
}
